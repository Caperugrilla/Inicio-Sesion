<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio_sesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ejercicios.keka.iniciosesion.InicioSesion"
    android:weightSum="1">


    <TextView
        android:id="@+id/tvReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bf2a1a"
        android:text="Regístrate con:"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.06" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/btReg"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btInicio"
        android:onClick="logeo"
        android:layout_height="48dp"
        android:textColor="#fcfbf5"
        android:textAllCaps="false"
        android:text="Iniciar sesión"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"
        android:layout_width="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btReg"
        android:background="#ce021d"
        android:layout_alignStart="@+id/btReg" />

    <Button
        android:id="@+id/btReg"
        android:onClick="registro"
        android:layout_height="wrap_content"
        android:textColor="#fcfbf5"
        android:textAllCaps="false"
        android:text="Registrarme"
        android:textSize="25dp"
        android:layout_marginBottom="24dp"
        android:layout_width="350dp"
        android:layout_above="@+id/btInicio"
        android:background="#ce021d"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:visibility="gone"
        android:id="@+id/progressBar" />

</RelativeLayout>
